<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONNECT TO SERVER"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fed_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:outlineProvider="bounds"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="@dimen/elevation"
        android:padding="@dimen/padding"
        android:layout_marginVertical="@dimen/margin"
        app:layout_constraintTop_toBottomOf="@id/start_button"
        app:layout_constraintBottom_toTopOf="@id/train_panel">

        <TextView
            android:id="@+id/fed_panel_title"
            android:text="Federated Log"
            android:textSize="@dimen/fontsz_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ListView
            android:id="@+id/fed_log"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="@dimen/fontsz_normal"
            android:layout_marginTop="@dimen/margin"
            android:divider="@null"
            android:transcriptMode="alwaysScroll"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fed_panel_title"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="10dp" >

        </ListView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/train_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:outlineProvider="bounds"
        android:layout_marginBottom="@dimen/margin"
        android:elevation="@dimen/elevation"
        android:hardwareAccelerated="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/test_panel">

        <TextView
            android:id="@+id/train_panel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local Training Log"
            android:textSize="@dimen/fontsz_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/epoch_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Epoch 1/1"
            android:textSize="@dimen/fontsz_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/train_panel_title"
            />

        <ProgressBar
            style="@style/update_progress_horizontal"
            android:id="@+id/train_progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            app:layout_constraintBottom_toBottomOf="@id/epoch_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/epoch_id"
            app:layout_constraintStart_toEndOf="@id/epoch_id"
            app:layout_constraintTop_toTopOf="@id/epoch_id"
            />

        <TextView
            android:id="@+id/loss_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Loss: 0"
            android:textSize="@dimen/fontsz_normal"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintTop_toBottomOf="@id/train_progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/accuracy_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Accuracy: 0%"
            android:textSize="@dimen/fontsz_normal"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintStart_toEndOf="@id/loss_log"
            app:layout_constraintTop_toTopOf="@id/loss_log"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/test_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation"
        android:outlineProvider="bounds"
        android:hardwareAccelerated="true"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/padding">

        <TextView
            android:id="@+id/test_panel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitor"
            android:textSize="@dimen/fontsz_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <com.example.fsandroid.MyLineChartView
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            app:layout_constraintTop_toBottomOf="@id/test_panel_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>